<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <FlexBox id="idSearchContainer"
        backgroundDesign="Solid"
        gap="15px"
        direction="Row"
        alignItems="Center"
        justifyContent="Center"
        width="100%" 
        class="sapUiResponsiveContentPadding"
    >
        <FlexBox
            gap="10px"
            direction="Row"
            alignItems="Center"
            justifyContent="SpaceBetween"
        >
            <l:VerticalLayout >
            
                <Label text="{i18n>placeholderSearchInput}"/>
                <Input id="idSearchByIdInput"
                    placeholder="{i18n>placeholderSearchInput}"
                    value="{SuppliersDataStore>/valueInputByIdSearch}">

                </Input>
            </l:VerticalLayout>
            <l:VerticalLayout >
            
                <Label text="{i18n>placeholderSearchInput}"/>
                <Input id="idSearchByNameInput"
                    placeholder="{i18n>placeholderSearchInput}"
                    value="{SuppliersDataStore>/valueInputByNameSearch}">

                </Input>
            </l:VerticalLayout>
        </FlexBox>
            <Button id="idSearchButton" text="{i18n>buttonSearchText}" press=".onPress" width="auto" />
    </FlexBox>
</c:FragmentDefinition>