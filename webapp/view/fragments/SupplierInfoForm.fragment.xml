<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <f:SimpleForm
        id="SimpleFormDisplay354"
        editable="true"
        layout="ResponsiveGridLayout"
        title="{i18n>Information}"
        labelSpanXL="3"
        labelSpanL="3"
        labelSpanM="3"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="0"
        columnsXL="1"
        columnsL="1"
        columnsM="1"
        singleContainerFullSize="false"
    >
        <f:content>
            <Label
                id="ld_01"
                text="{i18n>supplierId}"
            />
            <Text
                id="nameText"
                text="{SupplierID}"
            />

            <Label
                id="ld_02"
                text="{i18n>companyName}"
            />
            <Text
                id="td_01"
                text="{Street} {CompanyName}"
            />

            <Label
                id="ld_03"
                text="{i18n>contactName}"
            />
            <Text
                id="td_02"
                text="{ContactName}"
            />

            <Label
                id="ld_04"
                text="{i18n>contactTitle}"
            />
            <Text
                id="countryText"
                text="{ContactTitle}"
            />

            <Label text="{i18n>address}" />
            <Text text="{Address}" />

            <Label text="{i18n>Country}" />
            <Text text="{Country}" />

            <Label text="{i18n>city}" />
            <Text text="{City}" />

            <Label text="{i18n>Region}" />
            <Text text="{Region}" />

            <Label text="{i18n>Phone}" />
            <Text text="{Phone}" />
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
